---
import BaseLayout from "../layouts/BaseLayout.astro";
const BASE_URL = import.meta.env.BASE_URL;
---

<BaseLayout>
  <header class="bg-blue-600 text-white p-4 shadow-md">
    <h1 class="text-3xl font-bold text-center">Willkommen im Admin-Dashboard</h1>
  </header>

  <main class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

      <!-- Organisation -->
      <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col items-center hover:shadow-xl transition">
        <h2 class="text-xl font-bold mb-4">Organisation</h2>
        <p class="text-gray-600 mb-6 text-center">Verwalten Sie Konten, Mitarbeiter, Berechtigungen, Gruppen und Kunden.</p>
        <a href={`${BASE_URL}/organization/account`} class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Verwalten</a>
      </div>

      <!-- Ablauf -->
      <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col items-center hover:shadow-xl transition">
        <h2 class="text-xl font-bold mb-4">Ablauf</h2>
        <p class="text-gray-600 mb-6 text-center">Verwalten Sie die Warteschlangen und Servicezeiten effizient.</p>
        <a href={`${BASE_URL}/workflow/queue`} class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">Verwalten</a>
      </div>

      <!-- Übersicht -->
      <div class="bg-white shadow-lg rounded-lg p-6 flex flex-col items-center hover:shadow-xl transition">
        <h2 class="text-xl font-bold mb-4">Übersicht</h2>
        <p class="text-gray-600 mb-6 text-center">Behalten Sie den Überblick über Dashboards und Statistiken.</p>
        <a href="#" class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700">Anzeigen</a>
      </div>

    </div>


  </main>


</BaseLayout>